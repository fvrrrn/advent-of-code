{
  "testEnvironment": "node",
  "preset": "ts-jest/presets/default-esm",
  "transform": {
    "^.+\\.m?[tj]s?$": ["ts-jest", { "useESM": true }]
  },
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.(m)?js$": "$1"
  },
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "years/**/*.ts",
    "years/**/*.mts",
    "!years/**/*.d.ts",
    "!years/**/*.d.mts"
  ]
}
